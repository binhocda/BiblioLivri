                name="BasicHttpBinding_ICEmprestimo" />
            <endpoint address="http://localhost:26772/CItemEmprestimo.svc"
                binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_ICItemEmprestimo"
                contract="CItemEmprestimo.ICItemEmprestimo" name="BasicHttpBinding_ICItemEmprestimo" />
            <endpoint address="http://localhost:26772/CCopiaLivro.svc" binding="basicHttpBinding"
                bindingConfiguration="BasicHttpBinding_ICCopiaLivro" contract="CCopiaLivro.ICCopiaLivro"
                name="BasicHttpBinding_ICCopiaLivro" />
